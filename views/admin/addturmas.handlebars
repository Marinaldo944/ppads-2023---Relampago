{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<div class="card">
    <div class="card-body">
        <h4>Nova turma:</h4>
        <form action="/admin/turmas/cadastro" method="POST">
            <label for="titulo">TÃ­tulo:</label>
            <input type="text" name="titulo" class="form-control" required>
            <br>
            <h6>Turno:</h6>
            <div class="form-check">
                <input class="form-check-input" id="matutino" name="turno" type="radio" value="matutino" required/>
                <label>Matutino</label><br>
                <input class="form-check-input" id="vespertino" name="turno" type="radio" value="vespertino" required/> 
                <label>Vespertino</label><br>  
                <input class="form-check-input" id="noturno" name="turno" type="radio" value="noturno" required/> 
                <label>Noturno</label>
            </div><br>
            <label for="professor">Professor:</label>
            <select name="professor" class="form-select mt-3" required>
                    <option value="" disabled selected>Selecione um professor para a turma</option>
                    {{#each dados}}
                        <option value="{{_id}}">{{nome}}</option>
                    {{else}}
                        <option value="0">Nenhum professor cadastrado</option>
                    {{/each}}
            </select>
            <br>
            <button class="btn btn-success mt-4" type="submit">Criar turma</button>
        </form>
    </div>
</div>